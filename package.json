{
  "name": "body-aes-rsa",
  "version": "1.0.0",
  "description": "Package for encrypting the body with combined RSA and AES encryption.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && tsc",
    "test": "jest",
    "prepublish": "npm run test && npm run build",
    "postinstall": "node ./scripts/generateEnv.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vmatteus/body-aes-rsa.git"
  },
  "keywords": [
    "crypto",
    "front-end",
    "aes",
    "rsa",
    "typescript"
  ],
  "author": "Vin√≠cius Matteus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vmatteus/body-aes-rsa/issues"
  },
  "homepage": "https://github.com/vmatteus/body-aes-rsa#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jest-environment-jsdom",
    "setupFiles": ["<rootDir>/scripts/generateEnvTest.js", "<rootDir>/jest.setup.ts"],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "lib"
    ]
  },
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "jsencrypt": "^3.3.2"
  }
}
